<% extend('../layout/master') %>

    <div ng-app="admin">
        <div class="admin-brand" ng-controller="manage_brand">
            <div id="page-inner">
                <div class="row">
                    <div class="col-md-12">
                        <h1 class="page-header">
                            Brands
                        </h1>
                    </div>
                </div>
                <!-- /. ROW  -->

                <div class="row">
                    <div class="col-md-12">
                        <!-- Advanced Tables -->
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                Brands
                            </div>
                            <div>
                                <div>
                                    <input type="text" placeholder="Name Brand" ng-model="nameBrand" class="new-brand" style="margin-left: 15px;">
                                    <button class="btn-info" ng-click="createBrand()">Create New Brand</button>
                                    
                                </div>

                            </div>
                            <div class="panel-body">
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                        <thead>
                                            <tr>
                                                <th class="text-center">ID</th>
                                                <th class="text-center">Brand</th>
                                                <th class="text-center">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr class="gradeU" ng-repeat="brand in listBrand">
                                                <td class="text-center">{{brand.idbrand}}</td>
                                                <td class="text-center">
                                                    <span ng-hide="brand.edit" ng-dblclick="edit(brand)">{{brand.name}}</span>
                                                    <input type="text" ng-model="brand.name" ng-show="brand.edit" ng-keypress="($event.which === 13)?save(brand):0">
                                                </td>
                                                
                                                <td class="text-center">
                                                    <button class="btn-primary" ng-click="save(brand)" ng-show="brand.edit">Save</button>
                                                    <button class="btn-default" ng-click="edit(brand)" ng-hide="brand.edit">Edit</button>
                                                    <button class="btn-danger" ng-click="delete(brand.idCategory)">Delete</button>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>