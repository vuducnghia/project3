<% extend('../layout/master') %>

<div ng-app="admin">
        <div class="admin-user" ng-controller="profile">
            <div id="page-inner">
                <div class="row">
                    <div class="col-md-12">
                        <h1 class="page-header">
                            My Profile
                        </h1>
                    </div>
                </div>
                <!-- /. ROW  -->

                <div class="row">
                    <div class="col-md-12">
                        <!-- Advanced Tables -->
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <%= user.username %>
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                	<form action="/admin/profile/edit" method="post">
                                    <div class="col col-md-5">
                                        <h3>Thong tin tai khoan</h3>
                                        <br>
                                        <div class="form-group row">
                                            <div class="col-md-5">
                                                Id
                                            </div>
                                            <div class="col-md-6">
                                                <span><%= user.idadmin %></span>
                                                <input type="hidden" name="idadmin" value="<%= user.idadmin %>">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-md-5">
                                                Username
                                            </div>
                                            <div class="col-md-6">
                                                <span ng-hide="edit"><%= user.username %></span>
                                                <input type="text" name="username" value="<%= user.username %>" ng-show="edit">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-md-5">
                                                Phone
                                            </div>
                                            <div class="col-md-6">
                                                <span ng-hide="edit"><%= user.phone %></span>
                                                <input type="text" name="phone" value="<%= user.phone %>" ng-show="edit">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-md-5">
                                                Email
                                            </div>
                                            <div class="col-md-6">
                                                <span ng-hide="edit"><%= user.email %></span>
                                                <input type="text" name="email" value="<%= user.email %>" ng-show="edit">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-md-5">
                                                Level
                                            </div>
                                            <div class="col-md-6">
                                                <span><%= (user.level == 1)?'admin system':((user.level == 2)?'admin sale':'manager store') %></span>
                                            </div>
                                        </div>
                                        <div class="btn btn-default" ng-click="clickedit()" ng-hide="edit">Edit</div>
                                        <button class="btn btn-primary" ng-click="edit" ng-show="edit">Save</button>
                                    </div>
                                    </form>
								</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>